<h1 align="center">Update your Account</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :eerste %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Choose a new username", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :tweede %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :derde %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password for Alpha Blog" %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Update your account", class: "btn btn-primary btn-large" %>
        </div>
      </div>
    <% end %>
    
    <div class="col-xs-offset-4 col-xs-4">
      [<%= link_to 'Back', articles_path %>]
    </div>
  </div>
</div>